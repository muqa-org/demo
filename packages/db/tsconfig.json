{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@muqa/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "lib": ["esnext"],
    "noEmit": false,
    "incremental": true,
    "paths": {},
    "types": ["node"]
  },
  "exclude": ["**/node_modules", "**/.*/*", "dist"],
  "include": [
    ".eslintrc.*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.jsx",
    "**/*.json"
  ]
}
